{
  "name": "maxplay-video-platform",
  "version": "1.0.0",
  "description": "Video upload and playback platform with multi-resolution support",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "install-all": "npm install && cd frontend && npm install"
  },
  "keywords": ["video", "upload", "streaming", "express", "react"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "fluent-ffmpeg": "^2.1.2",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}

